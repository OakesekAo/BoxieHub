@rendermode InteractiveServer
@page "/tonies/{householdId}/{tonieId}"
@using BoxieHub.Models.BoxieCloud
@using BoxieHub.Services
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@using BoxieHub.Components.Pages.Tonies.Components
@inject ITonieService TonieService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject ILogger<Details> Logger
@inject IJSRuntime JS
@attribute [Authorize]
@implements IAsyncDisposable

<PageTitle>@(tonie?.Name ?? "Tonie Details") - BoxieHub</PageTitle>

<div class="container mt-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border spinner-border-lg text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading Tonie details...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            <h5><i class="bi bi-exclamation-triangle-fill"></i> Error Loading Tonie</h5>
            <p>@errorMessage</p>
            <a href="/tonies" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Tonies
            </a>
        </div>
    }
    else if (tonie != null)
    {
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/tonies">My Tonies</a></li>
                <li class="breadcrumb-item active">@tonie.Name</li>
            </ol>
        </nav>

        <!-- Tonie Header -->
        <TonieHeader @key="tonieHeaderKey"
                     Tonie="@tonie" 
                     HouseholdId="@HouseholdId" 
                     TonieId="@TonieId"
                     IsRefreshing="@isRefreshing"
                     OnRefresh="@RefreshTonie"
                     OnChangeImage="@(() => showImageUploadModal = true)" />

        <!-- Chapters Section -->
        <div class="card shadow">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="bi bi-list-ol"></i> Chapters (@(tonie.Chapters?.Count ?? 0))
                </h4>
                @if (hasUnsavedChanges)
                {
                    <div>
                        <button class="btn btn-sm btn-success me-2" @onclick="SaveChapterOrder" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                                <span>Saving...</span>
                            }
                            else
                            {
                                <i class="bi bi-check-lg me-1"></i>
                                <span>Save Order</span>
                            }
                        </button>
                        <button class="btn btn-sm btn-secondary" @onclick="CancelReorder" disabled="@isSaving">
                            <i class="bi bi-x-lg me-1"></i> Cancel
                        </button>
                    </div>
                }
            </div>
            <div class="card-body p-0">
                @if (tonie.Chapters == null || !tonie.Chapters.Any())
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-music-note-list" style="font-size: 3rem;"></i>
                        <p class="mt-3">No chapters yet. Upload your first audio file!</p>
                        <a href="/tonies/@HouseholdId/@TonieId/upload" class="btn btn-primary">
                            <i class="bi bi-upload"></i> Upload Audio
                        </a>
                    </div>
}
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 50px;">#</th>
                                    <th>Title</th>
                                    <th style="width: 100px;">Duration</th>
                                    <th style="width: 120px;">Status</th>
                                    <th style="width: 150px;" class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (tonie.Chapters != null)
                                {
                                    @for (int i = 0; i < tonie.Chapters.Count; i++)
                                    {
                                        var chapter = tonie.Chapters[i];
                                        var index = i + 1;
                                        var currentIndex = i;
                                        // Allow dragging unless a chapter is being edited
                                        var isDraggable = !IsChapterEditing(chapter.Id) && !editingChapters.Any();
                                        <tr draggable="@(isDraggable ? "true" : "false")"
                                            @key="chapter.Id"
                                            data-chapter-index="@currentIndex"
                                            class="chapter-row"
                                            style="cursor: @(isDraggable ? "move" : "default");">
                                            <td class="align-middle text-muted">
                                                @if (isDraggable)
                                                {
                                                    <i class="bi bi-grip-vertical me-2" style="opacity: 0.5;"></i>
                                                }
                                                @index
                                            </td>
                                            <td class="align-middle">
                                                @if (IsChapterEditing(chapter.Id))
                                                {
                                                    <input type="text" 
                                                           class="form-control form-control-sm"
                                                           @bind="editingTitles[chapter.Id]"
                                                           @bind:event="oninput"
                                                           maxlength="50"
                                                           placeholder="Chapter title"
                                                           @onkeydown="@((e) => HandleTitleKeyDown(e, chapter.Id))" />
                                                    <small class="text-muted">@editingTitles[chapter.Id].Length / 50 characters</small>
                                                }
                                                else
                                                {
                                                    <strong>@chapter.Title</strong>
                                                }
                                            </td>
                                            <td class="align-middle">
                                                <small class="text-muted">
                                                    <i class="bi bi-clock"></i> @FormatDuration(chapter.Seconds)
                                                </small>
                                            </td>
                                            <td class="align-middle">
                                                @if (chapter.Transcoding)
                                                {
                                                    <span class="badge bg-warning">
                                                        <span class="spinner-border spinner-border-sm me-1"></span> Processing
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Ready
                                                    </span>
                                                }
                                            </td>
                                            <td class="align-middle text-end">
                                                @if (IsChapterEditing(chapter.Id))
                                                {
                                                    <button class="btn btn-sm btn-success me-1" 
                                                            @onclick="() => SaveChapterTitle(chapter.Id)"
                                                            disabled="@isSavingTitle"
                                                            title="Save">
                                                        @if (isSavingTitle)
                                                        {
                                                            <span class="spinner-border spinner-border-sm"></span>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-check-lg"></i>
                                                        }
                                                    </button>
                                                    <button class="btn btn-sm btn-secondary" 
                                                            @onclick="() => CancelEditChapter(chapter.Id)"
                                                            disabled="@isSavingTitle"
                                                            title="Cancel">
                                                        <i class="bi bi-x-lg"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-primary me-1" 
                                                            @onclick="() => StartEditChapter(chapter)"
                                                            disabled="@(hasUnsavedChanges || isDeleting || editingChapters.Any())"
                                                            title="Edit title">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" 
                                                            @onclick="() => ShowDeleteConfirmation(chapter)"
                                                            disabled="@(isDeleting || hasUnsavedChanges || editingChapters.Any())"
                                                            title="Delete chapter">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
        
        @if (hasUnsavedChanges)
        {
            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Unsaved Changes:</strong> You have reordered chapters. Click \"Save Order\" to apply changes or \"Cancel\" to discard.
            </div>
        }
    }
</div>

<style>
    tr[draggable="true"] {
        user-select: none;
    }
    
    tr.dragging {
        opacity: 0.5;
        background-color: #e9ecef;
    }
    
    tr.drag-over {
        border-top: 3px solid #0d6efd;
        background-color: #cfe2ff;
    }
</style>

<style>
    .drag-handle {
        opacity: 0.3;
        transition: opacity 0.2s;
        font-size: 1.2rem;
    }
    
    tr:hover .drag-handle {
        opacity: 0.8;
    }
    
    tr.dragging {
        opacity: 0.4;
        background-color: #e9ecef;
    }
    
    tr.drag-over {
        border-top: 4px solid #0d6efd;
        background-color: #cfe2ff;
    }
    
    tbody tr {
        transition: background-color 0.2s;
    }
    
    tbody tr[draggable="true"] {
        user-select: none;
    }
</style>

<!-- Delete Confirmation Modal -->
@if (showDeleteModal && chapterToDelete != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle"></i> Confirm Deletion
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete" disabled="@isDeleting"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Are you sure you want to delete this chapter?</strong></p>
                    <div class="alert alert-warning">
                        <div><strong>Chapter:</strong> @chapterToDelete.Title</div>
                        <div><strong>Duration:</strong> @FormatDuration(chapterToDelete.Seconds)</div>
                    </div>
                    <p class="text-danger mb-0">
                        <i class="bi bi-exclamation-circle"></i> This action cannot be undone.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete" disabled="@isDeleting">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Deleting...</span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-2"></i>
                            <span>Delete Chapter</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Success/Error Toast -->
@if (!string.IsNullOrEmpty(statusMessage))
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050">
        <div class="toast show border-0 @(isError ? "bg-danger" : "bg-success") text-white" role="alert">
            <div class="toast-body d-flex align-items-center">
                <i class="bi @(isError ? "bi-exclamation-circle-fill" : "bi-check-circle-fill") me-2" style="font-size: 1.5rem;"></i>
                <div class="flex-grow-1">
                    <strong>@(isError ? "Error" : "Success")</strong>
                    <div class="small">@statusMessage</div>
                </div>
                <button type="button" class="btn-close btn-close-white" @onclick="() => statusMessage = null"></button>
            </div>
        </div>
    </div>
}

<!-- Image Upload Modal -->
@if (showImageUploadModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-image"></i> Change Tonie Image
                    </h5>
                    <button type="button" class="btn-close" @onclick="() => showImageUploadModal = false" disabled="@isUploadingImage"></button>
                </div>
                <div class="modal-body">
                    @if (!isUploadingImage)
                    {
                        <div class="mb-3">
                            <label class="form-label">Upload Custom Image</label>
                            <InputFile OnChange="HandleImageSelected" 
                                      class="form-control" 
                                      accept="image/png,image/jpeg,image/jpg,image/webp" />
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i> Supported formats: PNG, JPG, WEBP (Max: 5MB)
                            </small>
                        </div>

                        @if (selectedImage != null)
                        {
                            <div class="alert alert-info">
                                <h6><i class="bi bi-file-earmark-image"></i> Selected Image</h6>
                                <p class="mb-1"><strong>Name:</strong> @selectedImageName</p>
                                <p class="mb-0"><strong>Size:</strong> @FormatFileSize(selectedImageSize)</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(imageUploadError))
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle-fill"></i> @imageUploadError
                            </div>
                        }

                        @if (tonie?.ImageUrl?.StartsWith("/uploads/") == true)
                        {
                            <div class="alert alert-warning">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-star-fill"></i> <strong>Current:</strong> Custom image is set
                                    </div>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="DeleteCustomImage">
                                        <i class="bi bi-trash"></i> Revert to Default
                                    </button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary mb-3" role="status">
                                <span class="visually-hidden">Uploading...</span>
                            </div>
                            <p>Uploading image...</p>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showImageUploadModal = false" disabled="@isUploadingImage">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="UploadCustomImage" disabled="@(selectedImage == null || isUploadingImage)">
                        @if (isUploadingImage)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Uploading...</span>
                        }
                        else
                        {
                            <i class="bi bi-upload"></i>
                            <span>Upload Image</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public string HouseholdId { get; set; } = string.Empty;

    [Parameter]
    public string TonieId { get; set; } = string.Empty;

    private CreativeTonieDto? tonie;
    private List<ChapterDto>? originalChapters;
    private bool isLoading = true;
    private bool isRefreshing = false;
    private bool isDeleting = false;
    private bool isSaving = false;
    private string? errorMessage;
    private string? statusMessage;
    private bool isError = false;

    private bool showDeleteModal = false;
    private ChapterDto? chapterToDelete;
    
    // Reorder state
    private bool hasUnsavedChanges = false;
    private DotNetObjectReference<Details>? dotnetRef;
    
    // Edit chapter state
    private Dictionary<string, bool> editingChapters = new();
    private Dictionary<string, string> editingTitles = new();
    private bool isSavingTitle = false;
    
    // Image upload state
    private bool showImageUploadModal = false;
    private IBrowserFile? selectedImage;
    private string selectedImageName = string.Empty;
    private long selectedImageSize = 0;
    private string? imageUploadError;
    private bool isUploadingImage = false;
    
    // Component refresh key - change to force re-render
    private Guid tonieHeaderKey = Guid.NewGuid();

    protected override async Task OnInitializedAsync()
    {
        await LoadTonieDetails();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize JavaScript drag & drop
            dotnetRef = DotNetObjectReference.Create(this);
            await JS.InvokeVoidAsync("chapterDragDrop.init", dotnetRef);
        }
    }

    public async ValueTask DisposeAsync()
    {
        dotnetRef?.Dispose();
    }

    private async Task LoadTonieDetails()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);

            if (string.IsNullOrEmpty(userId))
            {
                errorMessage = "User not authenticated";
                return;
            }

            tonie = await TonieService.GetCreativeTonieDetailsAsync(userId, HouseholdId, TonieId);
            // Store original chapter order for comparison
            originalChapters = tonie.Chapters?.Select(c => new ChapterDto
            {
                Id = c.Id,
                Title = c.Title,
                Seconds = c.Seconds,
                File = c.File,
                Transcoding = c.Transcoding
            }).ToList();
            hasUnsavedChanges = false;
            Logger.LogInformation("Loaded Tonie details for {TonieId}: {Name} with {ChapterCount} chapters",
                TonieId, tonie.Name, tonie.Chapters?.Count ?? 0);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load Tonie details: {ex.Message}";
            Logger.LogError(ex, "Error loading Tonie details for {TonieId}", TonieId);
        }
        finally
        {
            isLoading = false;
            
            // Re-initialize drag & drop after data loads
            await Task.Delay(100);
            if (dotnetRef != null && tonie?.Chapters?.Any() == true)
            {
                await JS.InvokeVoidAsync("chapterDragDrop.attachEventListeners");
            }
        }
    }

    private async Task RefreshTonie()
    {
        isRefreshing = true;
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);

            if (!string.IsNullOrEmpty(userId))
            {
                // Force refresh from API (bypass cache)
                tonie = await TonieService.GetCreativeTonieDetailsAsync(userId, HouseholdId, TonieId, forceRefresh: true);
                ShowSuccess("Tonie refreshed successfully");
                Logger.LogInformation("Force refreshed Tonie {TonieId} from API", TonieId);
                
                // Update original chapters after refresh
                originalChapters = tonie.Chapters?.Select(c => new ChapterDto
                {
                    Id = c.Id,
                    Title = c.Title,
                    Seconds = c.Seconds,
                    File = c.File,
                    Transcoding = c.Transcoding
                }).ToList();
                hasUnsavedChanges = false;
                
                // Force state update
                StateHasChanged();
                
                // Re-initialize drag & drop
                await Task.Delay(100);
                if (dotnetRef != null && tonie?.Chapters?.Any() == true)
                {
                    await JS.InvokeVoidAsync("chapterDragDrop.attachEventListeners");
                }
            }
        }
        catch (Exception ex)
        {
            ShowError($"Failed to refresh Tonie: {ex.Message}");
            Logger.LogError(ex, "Error refreshing Tonie {TonieId}", TonieId);
        }
        finally
        {
            isRefreshing = false;
        }
    }

    private void ShowDeleteConfirmation(ChapterDto chapter)
    {
        chapterToDelete = chapter;
        showDeleteModal = true;
    }

    private void CancelDelete()
    {
        showDeleteModal = false;
        chapterToDelete = null;
    }

    private async Task ConfirmDelete()
    {
        if (chapterToDelete == null || tonie == null) return;

        isDeleting = true;
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);

            if (!string.IsNullOrEmpty(userId))
            {
                var success = await TonieService.DeleteChapterAsync(
                    userId,
                    HouseholdId,
                    TonieId,
                    chapterToDelete.Id);

                if (success)
                {
                    ShowSuccess($"Chapter '{chapterToDelete.Title}' deleted successfully");

                    // Reload Tonie details
                    await LoadTonieDetails();
                }
                else
                {
                    ShowError("Failed to delete chapter");
                }
            }
        }
        catch (Exception ex)
        {
            ShowError($"Error deleting chapter: {ex.Message}");
            Logger.LogError(ex, "Error deleting chapter {ChapterId}", chapterToDelete.Id);
        }
        finally
        {
            isDeleting = false;
            showDeleteModal = false;
            chapterToDelete = null;
        }
    }

    private void ShowSuccess(string message)
    {
        statusMessage = message;
        isError = false;
        StateHasChanged();

        // Auto-hide success messages after 4 seconds
        Task.Delay(4000).ContinueWith(_ =>
        {
            if (!isError && statusMessage == message)
            {
                statusMessage = null;
                InvokeAsync(StateHasChanged);
            }
        });
    }

    private void ShowError(string message)
    {
        statusMessage = message;
        isError = true;
        StateHasChanged();

        // Auto-hide error messages after 8 seconds (longer for errors)
        Task.Delay(8000).ContinueWith(_ =>
        {
            if (isError && statusMessage == message)
            {
                statusMessage = null;
                InvokeAsync(StateHasChanged);
            }
        });
    }

    private string FormatDuration(float seconds)
    {
        var timeSpan = TimeSpan.FromSeconds(seconds);
        if (timeSpan.TotalHours >= 1)
        {
            return $"{(int)timeSpan.TotalHours}h {timeSpan.Minutes}m";
        }
        return $"{timeSpan.Minutes}m {timeSpan.Seconds}s";
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
    
    // Image upload methods
    private void HandleImageSelected(InputFileChangeEventArgs e)
    {
        imageUploadError = null;
        selectedImage = e.File;

        if (selectedImage != null)
        {
            selectedImageName = selectedImage.Name;
            selectedImageSize = selectedImage.Size;

            // Validate file extension
            var extension = Path.GetExtension(selectedImage.Name).ToLowerInvariant();
            var allowedExtensions = new[] { ".png", ".jpg", ".jpeg", ".webp" };

            if (!allowedExtensions.Contains(extension))
            {
                imageUploadError = "Invalid file format. Please upload PNG, JPG, or WEBP images.";
                selectedImage = null;
                selectedImageName = string.Empty;
                selectedImageSize = 0;
                return;
            }

            // Check file size (max 5MB)
            const long maxSizeBytes = 5 * 1024 * 1024;
            if (selectedImage.Size > maxSizeBytes)
            {
                imageUploadError = $"Image too large. Maximum size is 5MB.";
                selectedImage = null;
                selectedImageName = string.Empty;
                selectedImageSize = 0;
                return;
            }
        }
    }

    private async Task UploadCustomImage()
    {
        if (selectedImage == null || tonie == null) return;

        isUploadingImage = true;
        imageUploadError = null;

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);

            if (string.IsNullOrEmpty(userId))
            {
                imageUploadError = "User not authenticated";
                isUploadingImage = false;
                return;
            }

            // Open file stream
            using var stream = selectedImage.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);

            // Upload image
            var success = await TonieService.UploadCustomTonieImageAsync(
                userId,
                HouseholdId,
                TonieId,
                stream,
                selectedImage.ContentType,
                selectedImage.Name);

            if (success)
            {
                // Close modal and reset first
                showImageUploadModal = false;
                selectedImage = null;
                selectedImageName = string.Empty;
                selectedImageSize = 0;
                
                // Force refresh from API to update cache with new image
                await RefreshTonie();
                
                // Generate new key to force TonieHeader component re-render with fresh image
                tonieHeaderKey = Guid.NewGuid();
                
                ShowSuccess("Custom image uploaded successfully!");
            }
            else
            {
                imageUploadError = "Failed to upload image";
            }
        }
        catch (Exception ex)
        {
            imageUploadError = $"Error uploading image: {ex.Message}";
            Logger.LogError(ex, "Error uploading custom image");
        }
        finally
        {
            isUploadingImage = false;
        }
    }

    private async Task DeleteCustomImage()
    {
        if (tonie == null) return;

        isUploadingImage = true;

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);

            if (string.IsNullOrEmpty(userId))
            {
                ShowError("User not authenticated");
                isUploadingImage = false;
                return;
            }

            var success = await TonieService.DeleteCustomTonieImageAsync(
                userId,
                HouseholdId,
                TonieId);

            if (success)
            {
                ShowSuccess("Custom image deleted. Reverted to default image.");
                
                // Reload Tonie details
                await LoadTonieDetails();
                
                // Generate new key to force TonieHeader component re-render
                tonieHeaderKey = Guid.NewGuid();
                
                // Close modal
                showImageUploadModal = false;
            }
            else
            {
                ShowError("Failed to delete custom image");
            }
        }
        catch (Exception ex)
        {
            ShowError($"Error deleting image: {ex.Message}");
            Logger.LogError(ex, "Error deleting custom image");
        }
        finally
        {
            isUploadingImage = false;
        }
    }
    
    // Edit chapter methods
    private bool IsChapterEditing(string chapterId)
    {
        return editingChapters.ContainsKey(chapterId) && editingChapters[chapterId];
    }

    private void StartEditChapter(ChapterDto chapter)
    {
        editingChapters[chapter.Id] = true;
        editingTitles[chapter.Id] = chapter.Title;
    }

    private void CancelEditChapter(string chapterId)
    {
        editingChapters.Remove(chapterId);
        editingTitles.Remove(chapterId);
    }

    private void HandleTitleKeyDown(KeyboardEventArgs e, string chapterId)
    {
        if (e.Key == "Enter")
        {
            _ = SaveChapterTitle(chapterId);
        }
        else if (e.Key == "Escape")
        {
            CancelEditChapter(chapterId);
        }
    }

    private async Task SaveChapterTitle(string chapterId)
    {
        if (!editingTitles.TryGetValue(chapterId, out var newTitle))
            return;
        
        // Validation
        if (string.IsNullOrWhiteSpace(newTitle))
        {
            ShowError("Chapter title cannot be empty");
            return;
        }
        
        if (newTitle.Length > 50)
        {
            ShowError("Chapter title must be 50 characters or less");
            return;
        }
        
        var chapter = tonie?.Chapters?.FirstOrDefault(c => c.Id == chapterId);
        if (chapter == null) return;
        
        var originalTitle = chapter.Title;
        
        // Skip if title hasn't changed
        if (newTitle == originalTitle)
        {
            CancelEditChapter(chapterId);
            return;
        }
        
        // Optimistic update
        chapter.Title = newTitle;
        editingChapters.Remove(chapterId);
        editingTitles.Remove(chapterId);
        isSavingTitle = true;
        StateHasChanged();
        
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);
            
            if (string.IsNullOrEmpty(userId))
            {
                ShowError("User not authenticated");
                chapter.Title = originalTitle; // Rollback
                return;
            }
            
            var success = await TonieService.UpdateChapterTitleAsync(
                userId,
                HouseholdId,
                TonieId,
                chapterId,
                newTitle);
            
            if (success)
            {
                ShowSuccess($"Updated chapter title to '{newTitle}'");
                Logger.LogInformation("Updated chapter {ChapterId} title to '{NewTitle}'", 
                    chapterId, newTitle);
                
                // Reload to get fresh data
                await LoadTonieDetails();
            }
            else
            {
                chapter.Title = originalTitle; // Rollback
                ShowError("Failed to update chapter title");
            }
        }
        catch (Exception ex)
        {
            chapter.Title = originalTitle; // Rollback
            ShowError($"Error updating chapter: {ex.Message}");
            Logger.LogError(ex, "Error updating chapter title for {ChapterId}", chapterId);
        }
        finally
        {
            isSavingTitle = false;
        }
    }
    
    // Drag & Drop - JavaScript callback
    [JSInvokable]
    public void OnChapterDropped(int fromIndex, int toIndex)
    {
        Logger.LogInformation("Chapter dropped: {From} -> {To}", fromIndex, toIndex);
        
        if (tonie?.Chapters == null || fromIndex == toIndex)
            return;

        var chapters = tonie.Chapters;
        var chapter = chapters[fromIndex];
        
        chapters.RemoveAt(fromIndex);
        chapters.Insert(toIndex, chapter);
        
        hasUnsavedChanges = true;
        StateHasChanged();
        
        // Re-attach event listeners after state change
        InvokeAsync(async () =>
        {
            await Task.Delay(50);
            await JS.InvokeVoidAsync("chapterDragDrop.attachEventListeners");
        });
        
        Logger.LogInformation("Chapter '{Title}' moved from position {From} to {To}", 
            chapter.Title, fromIndex + 1, toIndex + 1);
    }
    
    private async Task SaveChapterOrder()
    {
        if (tonie == null || !hasUnsavedChanges) return;
        
        isSaving = true;
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);
            
            if (string.IsNullOrEmpty(userId))
            {
                ShowError("User not authenticated");
                return;
            }
            
            // Call API to save new order
            await TonieService.ReorderChaptersAsync(
                userId,
                HouseholdId,
                TonieId,
                tonie.Name,
                tonie.Chapters!);
            
            // Update original chapters to match new order
            originalChapters = tonie.Chapters?.Select(c => new ChapterDto
            {
                Id = c.Id,
                Title = c.Title,
                Seconds = c.Seconds,
                File = c.File,
                Transcoding = c.Transcoding
            }).ToList();
            
            hasUnsavedChanges = false;
            ShowSuccess("Chapter order saved successfully!");
            Logger.LogInformation("Successfully saved chapter order for Tonie {TonieId}", TonieId);
        }
        catch (Exception ex)
        {
            ShowError($"Failed to save chapter order: {ex.Message}");
            Logger.LogError(ex, "Error saving chapter order for Tonie {TonieId}", TonieId);
        }
        finally
        {
            isSaving = false;
        }
    }
    
    private void CancelReorder()
    {
        if (tonie == null || originalChapters == null) return;
        
        // Restore original chapter order
        tonie.Chapters = originalChapters.Select(c => new ChapterDto
        {
            Id = c.Id,
            Title = c.Title,
            Seconds = c.Seconds,
            File = c.File,
            Transcoding = c.Transcoding
        }).ToList();
        
        hasUnsavedChanges = false;
        
        ShowSuccess("Changes discarded. Chapter order restored.");
        Logger.LogInformation("Cancelled chapter reordering for Tonie {TonieId}", TonieId);
    }
