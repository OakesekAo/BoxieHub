@page "/tonies"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>My Creative Tonies - BoxieHub</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-music-note-list"></i> My Creative Tonies</h2>
        <a href="/tonies/add-account" class="btn btn-primary">
            <i class="bi bi-link-45deg"></i> Add Tonie Account
        </a>
    </div>
    
    <div class="alert alert-info">
        <h5><i class="bi bi-info-circle"></i> Getting Started</h5>
        <p>
            Link your Tonie Cloud account to start managing your Creative Tonies.
        </p>
        <a href="/tonies/add-account" class="btn btn-sm btn-primary">
            <i class="bi bi-link-45deg"></i> Link Tonie Account
        </a>
    </div>
    
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-music-note-list" style="font-size: 4rem; color: #ccc;"></i>
            <h4 class="mt-3 text-muted">No Tonies Yet</h4>
            <p class="text-muted">
                Once you link your Tonie Cloud account, your Creative Tonies will appear here.
            </p>
        </div>
    </div>
</div>

